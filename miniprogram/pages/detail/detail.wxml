<view class="main">
    <!-- 公共的头部 -->
    <MyTitle></MyTitle>
    <!-- 视频详情 -->
    <view class="video_info">
        <!-- 视频标签 -->
        <video src="{{videoInfo.videoSrc}}" controls="{{true}}" />
        <!-- 视频标题 -->
        <view class="video_title">
            <text>{{videoInfo.videoTitle}}</text>
            <text class="fa fa-angle-down"></text>
        </view>
        <!-- 视频作者 -->
        <view class="video_detail">
            <!-- 作者 -->
            <text class="author">{{videoInfo.author}}</text>
            <!-- 播放量 -->
            <text class="play_count">{{videoInfo.playCount}}次观看 </text>
            <!-- 评论量 -->
            <text class="comment_count">{{videoInfo.commentCount}}弹幕 </text>
            <!-- 时间 -->
            <text class="date">{{videoInfo.date}}</text>
        </view>
    </view>
    <!-- 推荐视频 -->
    <view class="other_list">
        <navigator wx:for="{{othersList}}" wx:key="{{index}}" class="item_other">
            <!-- 图片容器 -->
            <view class="other_img_wrap">
                <image src="{{item.imgSrc}}" mode="widthFix"/>
            </view>
            <!-- 视频详情 -->
            <view class="other_info">
                <!-- 标题 -->
                <view class="other_title">{{item.videoTitle}}</view>
                <!-- 播放量 -->
                <view class="other_detail">
                    <!-- 播放量 -->
                    <text class="play_count">{{item.playCount}}次观看 </text>
                    <!-- 评论 -->
                    <text class="comment_count">{{item.commentCount}}弹幕</text>
                </view>
            </view>
        </navigator>
    </view>
</view>